<!DOCTYPE html>
<html lang="en" class="dark [scrollbar-gutter:stable]">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />

    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        darkMode: 'class',
        theme: {
          extend: {
            colors: {
              brand: "#FD4F00",
              olavPurple: "#a78bfa"
            },
            backgroundImage: {
              'olav-gradient': 'linear-gradient(to bottom right, #1e3a8a, #4338ca, #6d28d9)'
            },
            keyframes: {
              bounceRotated: {
                '0%, 100%': {
                  transform: 'translateY(0) rotate(351deg)',
                  animationTimingFunction: 'cubic-bezier(0.8,0,1,1)',
                },
                '50%': {
                  transform: 'translateY(-25%) rotate(351deg)',
                  animationTimingFunction: 'cubic-bezier(0,0,0.2,1)',
                },
              },
            },
            animation: {
              'bounce-rotated': 'bounceRotated 1s infinite',
            },
          }
        }
      }
    </script>

    <.live_title default="GigalixirGettingStarted" suffix=" · Phoenix Framework">
      {assigns[:page_title]}
    </.live_title>

    <link phx-track-static rel="stylesheet" href={~p"/assets/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/app.js"}></script>
  </head>
  <body class="bg-gray-900 text-black dark:text-white mb-16">

    {@inner_content}

    <div class="fixed bottom-6 left-0 w-full px-4 z-50">
      <button
        onclick="history.back()"
        class="w-full px-4 py-4 bg-pink-500 hover:bg-pink-600 text-white text-center rounded-none text-lg shadow-md transition"
      >
        ← Aftur
      </button>
    </div>
    
  </body>
</html>
